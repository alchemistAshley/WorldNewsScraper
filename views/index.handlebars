<div>
    {{#each article}}  
    <div class="uk-card uk-card-default uk-margin-small">
        <div class="uk-card-header">
            <h3 class="uk-card-title"><a href="{{link}}">{{title}}</a></h3>
            <p>{{teaser}}</p>
            <div class="test"></div>
            <a href="" data-id="{{this._id}}" class="star uk-icon-button" uk-icon="star"></a>
            <a href="#" class="leave-note uk-button uk-button-text uk-margin-left" data-id="{{this._id}}" href="#modal-sections" uk-toggle="target: #modal-sections">Leave A Note</a>
        </div>

        <div id="modal-sections" uk-modal>
            <div class="uk-modal-dialog">
                <button class="uk-modal-close-default" type="button" uk-close></button>
                <div class="uk-modal-header">
                    <h2 class="uk-modal-title">{{title}}</h2>
                </div>
                <div class="uk-modal-body">
                    <div uk-alert class="notes">
                        <a class="uk-alert-close" uk-close></a>
                        {{#if note}}
                        <p id="note-input">{{note.body}}</p>
                        {{/if}}
                    </div> 
                    <form>
                        <div class="uk-margin">
                            <textarea class="uk-textarea" id="bodyinput" rows="5" placeholder="Leave a note..."></textarea>
                        </div>
                    </form>
                </div>
                <div class="uk-modal-footer uk-text-right">
                    <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
                    <button id="save-note" class="uk-button uk-button-primary" data-id="{{this._id}}" type="submit">Save</button>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>  


